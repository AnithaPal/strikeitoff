
<%= form_for [user, item], remote: true do |f|%>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4 class='js-comments-count'> There are <%= pluralize(item.errors.count, 'error') %> </h4>
      <ul> 
        <% item.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(item.errors[:name]) do %>
    <%= f.label :new_task %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter your task" %>
  <% end %>
  <div class ="form-group">
    <%= f.submit "Add Todo Item", class: 'btn btn-sm btn-primary' %>
  </div>
<% end %>


