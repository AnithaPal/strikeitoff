<div class="container">
  <div class="row col-md-5 col-md-offset-1">
    <%= form_for [user, item], method: :post do |f|%>
    <% if item.errors.any? %>
      <div class="alert alert-danger">
        <h4> There are <%= pluralize(item.errors.count, 'error') %> </h4>
        <ul> 
          <% item.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_group_tag(item.errors[:name]) do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter your todo item" %>
    <% end %>
    <div class ="form-group">
      <%= f.submit "Add Todo Item", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>

